{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kubeflow Pipelines runtime",
  "name": "kfp",
  "display_name": "Kubeflow Pipelines runtime",
  "namespace": "runtimes",
  "uihints": {
    "title": "Kubeflow Pipelines runtimes",
    "icon": "elyra:runtimes"
  },
  "properties": {
    "schema_name": {
      "title": "Schema Name",
      "description": "The schema associated with this instance",
      "type": "string",
      "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
      "minLength": 1
    },
    "display_name": {
      "title": "Display Name",
      "description": "The display name of this KFP instance",
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "description": "Additional data specific to this metadata",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "The description of this KFP runtime instance",
          "type": "string"
        },
        "api_endpoint": {
          "title": "Kubeflow Pipelines API Endpoint",
          "description": "The Kubeflow Pipelines API endpoint",
          "type": "string",
          "format": "uri",
          "uihints": {
            "category": "Kubeflow Pipelines"
          }
        },
        "user_namespace": {
          "title": "Kubeflow Pipelines User Namespace",
          "description": "The Kubeflow Pipelines user namespace used to create experiments",
          "type": "string",
          "pattern": "^[a-z0-9][-a-z0-9]*[a-z0-9]$",
          "maxLength": 63,
          "uihints": {
            "category": "Kubeflow Pipelines"
          }
        },
        "api_username": {
          "title": "Kubeflow Pipelines API Endpoint Username",
          "description": "The Kubeflow Pipelines API endpoint username",
          "type": "string",
          "uihints": {
            "category": "Kubeflow Pipelines"
          }
        },
        "api_password": {
          "title": "Kubeflow Pipelines API Endpoint Password",
          "description": "The Kubeflow Pipelines API endpoint password",
          "type": "string",
          "uihints": {
            "secure": true,
            "category": "Kubeflow Pipelines"
          }
        },
        "engine": {
          "title": "Kubeflow Pipelines engine",
          "description": "The Kubeflow Pipelines engine in use (Argo or Tekton)",
          "type": "string",
          "enum": ["Argo", "Tekton"],
          "default": "Argo",
          "uihints": {
            "field_type": "dropdown",
            "category": "Kubeflow Pipelines"
          }
        },
        "cos_endpoint": {
          "title": "Cloud Object Storage Endpoint",
          "description": "The Cloud Object Storage endpoint",
          "type": "string",
          "format": "uri",
          "uihints": {
            "category": "Cloud Object Storage"
          }
        },
        "cos_username": {
          "title": "Cloud Object Storage Username",
          "description": "The Cloud Object Storage username",
          "type": "string",
          "uihints": {
            "category": "Cloud Object Storage"
          }
        },
        "cos_password": {
          "title": "Cloud Object Storage Password",
          "description": "The Cloud Object Storage password",
          "type": "string",
          "minLength": 8,
          "uihints": {
            "secure": true,
            "category": "Cloud Object Storage"
          }
        },
        "cos_bucket": {
          "title": "Cloud Object Storage Bucket Name",
          "description": "The Cloud Object Storage bucket name",
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-.]*[a-z0-9]$",
          "minLength": 3,
          "maxLength": 222,
          "uihints": {
            "category": "Cloud Object Storage"
          }
        },
        "tags": {
          "title": "Tags",
          "description": "Tags for categorizing Kubeflow pipelines",
          "type": "array",
          "uihints": {
            "field_type": "tags"
          }
        },
        "gateway_config": {
          "description": "Configuration properties related to an integration with Enterprise Gateway",
          "type": "object",
          "properties": {
            "description": {
              "title": "Enterprise Gateway Configuration",
              "description": "This runtime instance's Enterprise Gateway configuration properties.",
              "type": "string",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "enabled": {
              "title": "Enabled",
              "description": "Indicates whether use of the Gateway Configuration is enabled (true) or not (false).  Default is false.",
              "type": "boolean",
              "default": false,
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "url": {
              "title": "Url",
              "description": "The URL of the EG server (e.g., http://<server>:<port>).",
              "type": "string",
              "format": "uri",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "ws_url": {
              "title": "WebSocket Url",
              "description": "The WebSocket URL of the EG server (e.g., ws://<server>:<port>). Will derive from url if not set.",
              "type": "string",
              "format": "uri",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "kernels_endpoint": {
              "title": "Kernels API Endpoint",
              "description": "The gateway API endpoint for accessing kernels.",
              "type": "string",
              "default": "/api/kernels",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "kernelspecs_endpoint": {
              "title": "Kernelspecs API Endpoint",
              "description": "The gateway API endpoint for accessing kernelspecs.",
              "type": "string",
              "default": "/api/kernelspecs",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "request_timeout": {
              "title": "Request Timeout",
              "description": "The time allowed for HTTP request completion.",
              "type": "number",
              "default": 40.0,
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "connect_timeout": {
              "title": "Connect Timeout",
              "description": "The time allowed for HTTP connection establishment with the Gateway server.",
              "type": "number",
              "default": 40.0,
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "headers": {
              "title": "Headers",
              "description": "Additional HTTP headers to pass on the request.  This value will be converted to JSON.",
              "type": "string",
              "default": "{}",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "auth_token": {
              "title": "Authorization Token",
              "description": "The authorization token used in the HTTP headers.",
              "type": "string",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "client_key": {
              "title": "Client Key Filename",
              "description": "The filename for client SSL key, if any.",
              "type": "string",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "client_cert": {
              "title": "Client Certificate Filename",
              "description": "The filename for client SSL certificate, if any.",
              "type": "string",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "ca_certs": {
              "title": "CA Certificate Filename",
              "description": "The filename of CA certificates, if any.",
              "type": "string",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "http_user": {
              "title": "HTTTP User",
              "description": "The username for HTTP authentication.",
              "type": "string",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "http_pwd": {
              "title": "HTTTP Password",
              "description": "The password for HTTP authentication.",
              "type": "string",
              "uihints": {
                "category": "Enterprise Gateway"
              }
            },
            "validate_cert": {
              "title": "Validate Certificate",
              "description": "For HTTPS requests, determines if server's certificate should be validated or not.",
              "type": "boolean",
              "default": true,
              "uihints": {
                "category": "Enterprise Gateway"
              }
            }
          },
          "uihints": {
            "field_type": "code"
          }
        }
      },
      "required": [
        "api_endpoint",
        "cos_endpoint",
        "cos_username",
        "cos_password",
        "cos_bucket"
      ]
    }
  },
  "required": ["schema_name", "display_name", "metadata"]
}
